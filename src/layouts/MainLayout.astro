---
import Base from "@/layouts/Base.astro";

import Navigation from "@/components/ui/Navigation.astro";
import Banner from "@/components/ui/Banner.astro";
import Footer from "@/components/ui/Footer.astro";

import { APPEARANCE } from "@/consts";

const contentWidth = APPEARANCE.contentWidth;
---

<Base>
  <!-- Start Base Slots -->
  <Navigation
    transition:persist
    class="bg-surface/80 z-50 flex h-full backdrop-blur-sm"
    contentWidth={contentWidth}
    slot="header"
  />
  <Banner slot="background" />
  <Footer
    class="text-foreground mx-auto py-0.5 text-center text-xs"
    contentWidth={contentWidth}
    slot="footer"
  />
  <!-- End Base Slots -->

  <slot />
</Base>
