---
import type { GetStaticPaths } from "astro";
import { render, getCollection } from "astro:content";

import MainLayout from "@/layouts/MainLayout.astro";
import PageSection from "@/layouts/PageSection.astro";

import PostHeader from "@/components/ui/post/PostHeader.astro";
import TableOfContents from "@/components/ui/post/TableOfContents.astro";
import DefaultLeftAside from "@/components/ui/DefaultLeftAside.astro";

export const getStaticPaths = (async () => {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { Content, headings } = await render(post);
---

<MainLayout>
  <PageSection>
    <DefaultLeftAside slot="left-aside" />
    <div class="flex flex-col gap-6">
      <!-- <PostHeader {post} /> -->
      <div class="prose">
        <Content />
      </div>
    </div>
    <TableOfContents
      headings={headings}
      class:list={[
        "sticky top-20 max-h-[40dvh] overflow-y-scroll mask-y-from-95%",
      ]}
      slot="right-aside"
    />
  </PageSection>
</MainLayout>
