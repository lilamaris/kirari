---
import type { GetStaticPaths } from "astro";
import { render, getCollection } from "astro:content";

import MainLayout from "@/layouts/MainLayout.astro";
import PageSection from "@/layouts/PageSection.astro";
import TableOfContents from "@/components/ui/post/TableOfContents.astro";

export const getStaticPaths = (async () => {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { Content, headings } = await render(post);
const contentWidth = 50;
const asideWidth = 20;
---

<MainLayout contentWidth={contentWidth} class:list={["flex flex-col gap-6"]}>
  <PageSection contentWidth={contentWidth} asideWidth={asideWidth} gap={1}>
    <div class:list={["card p-5"]}>
      <h1 class:list={["text-3xl font-semibold"]}>{post.data.title}</h1>
    </div>
  </PageSection>
  <PageSection contentWidth={contentWidth} asideWidth={asideWidth} gap={1}>
    <div class="prose mx-5">
      <Content />
    </div>
    <TableOfContents
      headings={headings}
      class:list={[
        "sticky top-20 max-h-[40dvh] overflow-y-scroll mask-y-from-95%",
      ]}
      slot="right-aside"
    />
  </PageSection>
</MainLayout>
