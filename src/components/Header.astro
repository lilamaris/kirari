---
import Link from "@/components/ui/Link.astro";
import DecorateText from "@/components/ui/DecorateText.astro";

import ThemeController from "@/components/ThemeController.svelte";
import HueController from "@/components/HueController.svelte";

import { SITE_CONFIG } from "@/consts/site";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header
  class:list={[
    className,
    "card flex items-center justify-between rounded-t-none rounded-b-xl p-4",
  ]}
>
  <div class="flex items-center gap-1 px-5 text-xl">
    <DecorateText
      class="capitalize"
      icon="lucide:house"
      text={SITE_CONFIG.author}
    />
  </div>
  <div class="flex flex-1 gap-1">
    <Link class="btn text-lg" data-variant="ghost" href="/"> Home </Link>
    <Link class="btn text-lg" data-variant="ghost" href="/posts"> Posts </Link>
  </div>
  <div class="flex items-center gap-1">
    <HueController client:only="svelte" />
    <ThemeController client:only="svelte" />
  </div>
</header>
