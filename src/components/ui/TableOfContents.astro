---
import { type MarkdownHeading } from "astro";
import Link from "@/components/atom/common/Link.astro";

interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props;
---
<div class="text-foreground sticky top-0">
  <span class="text-foreground text-lg">Table of Contents</span>
  <ul class="flex flex-col gap-1">
    {
      headings.map((heading) => (
        <li
          class:list={["text-foreground/70"]}
          style={`margin-left: ${heading.depth / 2}rem`}
        >
          <Link href=`#${heading.slug}`>
            {heading.text}
          </Link>
        </li>
      ))
    }
  </ul>
</div>
