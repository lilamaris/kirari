---
import { Icon } from "astro-icon/components";

import Link from "@/components/common/Link.astro";
import Img from "@/components/common/Img.astro";

import { SITE, SOCIAL } from "@/consts/site";
import type { StyledProps } from "@/types";
import { objectEntries } from "@/lib/utils";

interface Props extends StyledProps {
  avatarUrl: string;
}

const { class: className = "", style: styleAttr = "", avatarUrl } = Astro.props;
---

<div class:list={[className]} style={styleAttr}>
  <Img
    src={avatarUrl}
    alt="profile"
    class="rounded-surface border-border/50 aspect-square max-w-24 overflow-hidden border"
  />
  <div class="flex flex-col">
    <div class="mb-2 flex-1 px-1">
      <h1 class="font-bold">{SITE.author}</h1>
      <p class="text-foreground/50 text-sm">{SITE.description}</p>
    </div>
    <ul class="flex flex-wrap gap-px">
      {
        objectEntries(SOCIAL).map(([key, link]) => (
          <li>
            <Link href={link.href} class="btn icon">
              <Icon name={link.icon} />
            </Link>
          </li>
        ))
      }
    </ul>
  </div>
</div>
