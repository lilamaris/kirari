---
import type { IterableRenderer, Breadcrumb } from "@/types";
import Link from "../common/Link.astro";

interface Props extends IterableRenderer<Breadcrumb> {}

const { id, index, item } = Astro.props;
---

<div class="flex capitalize items-center">
  {
    item.isLast ? (
      <span
        class:list={[
          "px-2 text-foreground",
        ]}
      >
        {item.name}
      </span>
    ) : (
    <Link href={item.href} class="px-2 text-foreground/70 hover:text-foreground/90 transition">{item.name}</Link>
      <slot name="separator" />
    )
  }
</div>
