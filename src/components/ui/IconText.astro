---
interface Props {
  enableDecorator?: boolean;
}
const hasDecorator = Astro.slots.has("decorator");
const { enableDecorator = true }: Props = Astro.props;
---

<div class="flex items-center gap-1">
  <div
    class="bg-background text-foreground flex h-8 w-8 items-center justify-center rounded-md"
  >
    <slot name="icon" />
  </div>
  <span class="text-sm font-medium">
    <slot />
  </span>
</div>
