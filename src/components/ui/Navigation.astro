---
import Decorator from "@/components/atom/common/Decorator.astro";
import Link from "@/components/atom/common/Link.astro";
import { SITE } from "@/consts/site";
import { Icon } from "astro-icon/components";

import ThemeController from "@/components/ui/ThemeController.svelte";
import HueController from "@/components/ui/HueController.svelte";

const routes = [
  { href: "/", name: SITE.title, icon: "lucide:house" },
  { href: "/blog", name: "Blog" },
  { href: "/index", name: "Index" },
];
---

<header
  class="card bg-surface flex min-h-10 items-center justify-between gap-4 px-2 py-1"
>
  <div class="flex items-center gap-2">
    {
      routes.map((route) => (
        <Link href={route.href}>
          <Decorator>
            {route.icon && <Icon name={route.icon} slot="deco" />}
            <span class="text-foreground/70 hover:text-foreground font-semilight text-sm transition">
              {route.name}
            </span>
          </Decorator>
        </Link>
      ))
    }
  </div>
  <div class="flex items-center gap-px">
    <HueController client:only="svelte" />
    <ThemeController client:only="svelte" />
  </div>
</header>
