---
import { Icon } from "astro-icon/components";

import Item from "./Item.astro";

import type { IterableRenderer, PostIndex } from "@/types";

interface Props extends IterableRenderer<PostIndex> {}

const { id, index, item } = Astro.props;
---

<Item
  id={id}
  class="hover:text-accent-foreground text-sm transition"
  index={index}
  item={item}
  showCount
>
  <Icon name="lucide:folder" slot="icon" />
</Item>
