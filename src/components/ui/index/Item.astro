---
import Decorator from "@/components/common/Decorator.astro";
import type { IterableRenderer, PostIndex, StyledProps } from "@/types";

interface Props extends StyledProps, IterableRenderer<PostIndex> {
  showCount?: boolean;
}

const {
  class: className = "",
  style: styleAttr = "",
  item,
  showCount = false,
} = Astro.props;
---

<Decorator class:list={[className]} style={styleAttr}>
  <slot name="icon" slot="deco" />
  <Fragment slot="default">
    <span class="text-foreground/80 group-hover:text-foreground transition">
      {item.data.name}
    </span>
    {
      showCount && (
        <span class="text-foreground/50 ml-1"> ({item.data.count})</span>
      )
    }
  </Fragment>
</Decorator>
