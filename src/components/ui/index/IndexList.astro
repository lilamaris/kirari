---
import Link from "@/components/common/Link.astro";

import { joinUrl } from "@/lib/utils";
import type { PostIndex, StyledProps, IterableRenderProps } from "@/types";
import { ROUTE } from "@/consts";

interface Props extends StyledProps, IterableRenderProps<PostIndex> {}

const {
  class: className = "",
  style: styleAttr = "",
  items = [],
  renderer: Comp,
} = Astro.props;
---

<ul class:list={[className]} style={styleAttr}>
  {
    items.map((item, index) => (
      <li class="group">
        <Link href={joinUrl(ROUTE["index"].href, item.id)}>
          <Comp id={item.id} index={index} item={item} />
        </Link>
      </li>
    ))
  }
</ul>
