---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href?: string;
  external?: boolean;
  underline?: boolean;
}

const {
  href = "#",
  external,
  underline,
  class: className,
  ...props
}: Props = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class:list={[
    className,
    underline && "hover:decoration-accent underline underline-offset-3",
  ]}
  {...props}
>
  <slot />
</a>
