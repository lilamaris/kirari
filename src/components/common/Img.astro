---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt?: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpg,jpeg,png}",
);
if (!images[src]) throw new Error(`"/src/assets/${src}" does not exists`);
---

<Image src={images[src]()} alt={alt || ""} class:list={[className]} />
